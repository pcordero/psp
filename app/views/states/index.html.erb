<% content_for :page_title do %>
  <h1 class="page-header">Find Your State</h1>
<% end %>

<p class="lead">
You are invited to join us as we pray for three elected officials daily.  Use the map or select a region to find your leaders.
</p>

<div class="hidden-phone">
</div>

<div style="position:relative">

  <%= render :partial => 'map' %>

  <%= render :partial => 'region_button',
    locals: {region: 'northeast', position: 'top:0;right:5%'} %>

  <%= render :partial => 'region_button',
    locals: {region: 'midwest', position: 'top:0;right:40%'} %>

  <%= render :partial => 'region_button',
    locals: {region: 'south', position: 'bottom:50%;right:5%'} %>

  <%= render :partial => 'region_button',
    locals: {region: 'west', position: 'top:20%;left:0'} %>

</div>

<% if false %>
<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li class="active hidden-phone"><a href="#map" data-toggle="tab">Map</a></li>
    <li><a href="#northeast" data-toggle="tab">Northeast</a></li>
    <li><a href="#midwest" data-toggle="tab">Midwest</a></li>
    <li><a href="#south" data-toggle="tab">South</a></li>
    <li><a href="#west" data-toggle="tab">West</a></li>
  </ul>

  <div class="tab-content">
    <div class="hidden-phone tab-pane active" id="map">
      <%= render :partial => 'map' %>
    </div>
    <div class="tab-pane" id="northeast">
      <h2>States in the Northeast</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.northeast.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="midwest">
      <h2>States in the Midwest</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.midwest.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="south">
      <h2>States in the South</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.south.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="west">
      <h2>States in the West</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.west.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>


<div class="lead directions">
  <div>
    <p>
      Public Servants Prayer will assist you in praying for your leaders by sending
      a daily or weekly reminder by email.&nbsp; You will receive a picture and
      specific information about three legislators from your state.&nbsp; This service
      is free of charge.
    </p>
    <p class="highlight">
      Public Servants' Prayer supports leaders through prayer and pastoral care.
    </p>
    <button type="button" class="btn btn-modal" data-toggle="modal" data-target="#exampleModal">
      Subscribe to pray for leaders
    </button>
  </div>
</div>

<%= render 'subscribe_modal' %>
